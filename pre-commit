#!/bin/bash

#Git link for documentation
git_link="http://repo.antiersolutions.com/surinder.k/git-hooks"

# Define the name of the environment file you want to check
ENV_FILE=".env"

# Get the list of staged files
STAGED_FILES=$(git diff --cached --name-only)

# Check if the environment file is among the staged files
if [[ $STAGED_FILES =~ $ENV_FILE ]]; then
  echo "Warning: ($ENV_FILE) file isn't allowed to be pushed to the git server. Please exclude it from the code."
  echo "Documentation: $git_link"
#   echo "Are you sure you want to commit this file? (y/N)"
#   read -r answer($ENV_FILE)

  # Convert the answer to lowercase for case-insensitive comparison
#   answer=$(tr [A-Z] [a-z] <<< "$answer")

#   if [[ "$answer" != "y" ]]; then
#     echo "Aborting commit."
#     exit 1
#   fi
exit 1
fi

